{
  "name": "@ckb-lumos/utils",
  "version": "0.20.0-alpha.3",
  "private": true,
  "description": "Common utilities",
  "homepage": "https://github.com/ckb-js/lumos#readme",
  "bugs": {
    "url": "https://github.com/ckb-js/lumos/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/lumos.git"
  },
  "license": "MIT",
  "author": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:js": "babel --root-mode upward src --out-dir lib --extensions .ts -s",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "clean": "rm -rf lib",
    "fmt": "prettier --write \"{src,tests,examples}/**/*.ts\" package.json",
    "lint": "eslint -c ../../.eslintrc.js \"{src,tests,examples}/**/*.ts\"",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "npm publish",
    "test": "ava **/*.test.ts --timeout=2m"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
