{
  "name": "@ckb-lumos/codec",
  "version": "0.21.0-next.2",
  "description": "Make your own molecule binding in JavaScript(TypeScript)",
  "author": "",
  "homepage": "https://github.com/ckb-js/lumos#readme",
  "license": "MIT",
  "main": "./lib/index.js",
  "module": "./lib.esm/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib.esm/index.js",
      "default": "./lib/index.js"
    },
    "./bytes": {
      "import": "./lib.esm/bytes.js",
      "default": "./lib/bytes.js",
      "types": "./lib/bytes.d.ts"
    },
    "./number": {
      "import": "./lib.esm/number/index.js",
      "default": "./lib/number/index.js",
      "types": "./lib/number/index.d.ts"
    },
    "./molecule": {
      "import": "./lib.esm/molecule/index.js",
      "default": "./lib/molecule/index.js",
      "types": "./lib/molecule/index.d.ts"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "lib",
    "lib.esm",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/lumos.git"
  },
  "scripts": {
    "fmt": "prettier --write \"{src,tests,examples}/**/*.ts\" package.json",
    "lint": "eslint -c ../../.eslintrc.js \"{src,tests,examples}/**/*.ts\"",
    "test": "ava **/*.test.ts --timeout=2m",
    "build": "npm run build:all",
    "build:all": "lumos-build --types --cjs --esm",
    "clean": "rm -rf lib"
  },
  "dependencies": {
    "@ckb-lumos/bi": "0.21.0-next.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/ckb-js/lumos/issues"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "escape-string-regexp": "^4.0.0",
    "js-yaml": "^4.1.0"
  }
}
