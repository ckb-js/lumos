{
  "private": true,
  "name": "@ckb-lumos/debugger",
  "version": "0.20.0",
  "description": "ckb-standard-debugger wrapper for lumos, check tx without launching a full node",
  "author": "",
  "homepage": "https://github.com/ckb-js/lumos#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib",
    "src",
    "contracts"
  ],
  "dependencies": {
    "@ckb-lumos/base": "0.20.0",
    "@ckb-lumos/bi": "0.20.0",
    "@ckb-lumos/codec": "0.20.0",
    "@ckb-lumos/config-manager": "0.20.0",
    "@ckb-lumos/helpers": "0.20.0",
    "@ckb-lumos/rpc": "0.20.0",
    "@types/download": "^8.0.1",
    "@types/object-hash": "^2.2.1",
    "debug": "^4.3.4",
    "download": "^8.0.0",
    "env-paths": "^2.2.1",
    "object-hash": "^3.0.0"
  },
  "devDependencies": {
    "@ckb-lumos/common-scripts": "0.20.0",
    "@ckb-lumos/experiment-tx-assembler": "0.20.0",
    "@ckb-lumos/hd": "0.20.0"
  },
  "bin": {
    "download-ckb-debugger": "bin/download-ckb-debugger.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/lumos.git"
  },
  "scripts": {
    "fmt": "prettier --write \"{src,tests,examples}/**/*.ts\" package.json",
    "lint": "eslint -c ../../.eslintrc.js \"{src,tests,examples}/**/*.ts\"",
    "test": "ava **/*.test.ts --timeout=2m",
    "build": "pnpm run build:types && pnpm run build:js",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:js": "babel --root-mode upward src --out-dir lib --extensions .ts -s",
    "clean": "rm -rf lib",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "release": "pnpm publish"
  },
  "bugs": {
    "url": "https://github.com/ckb-js/lumos/issues"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
