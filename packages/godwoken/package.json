{
  "name": "@ckb-lumos/godwoken",
  "version": "0.13.2",
  "description": "Godwoken JS Binding.",
  "author": "Xuejie Xiao <xxuejie@gmail.com>",
  "homepage": "https://github.com/nervosnetwork/lumos#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "cpu": [
    "x64"
  ],
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nervosnetwork/lumos.git"
  },
  "dependencies": {
    "ckb-js-toolkit": "^0.9.2",
    "@ckb-lumos/base": "^0.13.2",
    "@ckb-lumos/indexer": "^0.13.2",
    "node-pre-gyp": "^0.14.0",
    "immutable": "^4.0.0-rc.12",
    "neon-cli": "^0.5.0"
  },
  "files": [
    "index.d.ts",
    "lib",
    "native/build.rs",
    "native/Cargo.*",
    "native/src",
    "scripts/*"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org/"
  },
  "scripts": {
    "install": "neon build",
    "build-release": "neon build --release",
    "fmt": "prettier --write \"{lib,scripts,tests}/**/*.js\" index.d.ts && cd native && cargo fmt --all --",
    "lint": "eslint -c ../../.eslintrc.js \"{lib,scripts}/**/*.js\"",
    "test": "ava **/*.test.js"
  },
  "bugs": {
    "url": "https://github.com/nervosnetwork/lumos/issues"
  }
}
