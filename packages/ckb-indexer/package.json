{
  "name": "@ckb-lumos/ckb-indexer",
  "version": "0.18.0-rc2",
  "description": "CKB Indexer",
  "author": "Xuejie Xiao <xxuejie@gmail.com>",
  "homepage": "https://github.com/nervosnetwork/lumos#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nervosnetwork/lumos.git"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.18.0-rc2",
    "@ckb-lumos/rpc": "^0.18.0-rc2",
    "@types/sinon": "^10.0.6",
    "ava": "^3.15.0",
    "ckb-js-toolkit": "^0.100.0-rc1",
    "cross-fetch": "^3.1.4",
    "events": "^3.3.0",
    "sinon": "^12.0.1"
  },
  "scripts": {
    "fmt": "prettier --write \"{src,tests,examples}/**/*.ts\" package.json",
    "lint": "eslint -c ../../.eslintrc.js \"{src,tests,examples}/**/*.ts\"",
    "test": "ava **/*.test.ts --timeout=2m",
    "build": "tsc",
    "clean": "rm -rf lib",
    "prepublishOnly": "yarn run clean && yarn run build",
    "release": "npm publish"
  },
  "bugs": {
    "url": "https://github.com/nervosnetwork/lumos/issues"
  },
  "peerDependencies": {
    "mysql2": "^2.1.0",
    "pg": "^8.2.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
