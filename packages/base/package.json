{
  "name": "@ckb-lumos/base",
  "version": "0.19.0-alpha.2",
  "description": "Base data structures and utilities used in lumos",
  "author": "Xuejie Xiao <xxuejie@gmail.com>",
  "homepage": "https://github.com/nervosnetwork/lumos#readme",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=12.0.0"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "files": [
    "lib",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nervosnetwork/lumos.git"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --declaration --declarationMap --emitDeclarationOnly",
    "build:js": "npm run build:old && babel --root-mode upward src/blockchain.ts --out-file lib/blockchain.js --source-maps",
    "build:old": "mkdir -p lib && cp -rp src/*.d.ts lib && cp -rp src/*.js lib",
    "fmt": "prettier --write \"{lib,tests}/**/*.js\" index.d.ts package.json",
    "lint": "eslint -c ../../.eslintrc.js \"{lib,tests}/**/*.js\"",
    "test:ts": "ava **/*.test.ts --timeout=2m",
    "clean": "rm -rf lib",
    "test": "ava --timeout=2m"
  },
  "devDependencies": {
    "rollup": "^1.32.0"
  },
  "bugs": {
    "url": "https://github.com/nervosnetwork/lumos/issues"
  },
  "ava": {
    "extensions": [
      "ts",
      "js"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@ckb-lumos/bi": "^0.19.0-alpha.1",
    "@ckb-lumos/codec": "^0.19.0-alpha.1",
    "@ckb-lumos/toolkit": "^0.19.0-alpha.2",
    "@types/lodash.isequal": "^4.5.5",
    "blake2b": "^2.1.3",
    "js-xxhash": "^1.0.4",
    "lodash.isequal": "^4.5.0"
  },
  "peerDependencies": {
    "jsbi": "^4.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
