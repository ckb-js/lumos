{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/types": "^16.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "ava": "^3.8.2",
    "c8": "^7.10.0",
    "eslint": "^8.40.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "shx": "^0.3.4",
    "sinon": "^15.0.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "5.0.4"
  },
  "scripts": {
    "docs": "typedoc",
    "prepare": "is-ci || husky install",
    "test": "lerna run test --parallel",
    "e2e-test": "pnpm run e2e-indexer && pnpm run integration-test",
    "e2e-indexer": "cd packages/ckb-indexer && pnpm run test:e2e",
    "integration-test": "cd packages/e2e-test && pnpm run test:e2e",
    "test-coverage": "npx c8 --reporter=cobertura --reporter=html --clean -o coverage pnpm run test",
    "build:types": "lerna run build:types",
    "build:js": "lerna run build:js --parallel",
    "build": "run-p build:*",
    "build-release": "lerna run --scope @ckb-lumos/lumos build:umd",
    "lint": "run-p lint:* && git diff --exit-code",
    "fmt": "lerna run fmt --parallel",
    "lint:eslint": "lerna run lint --parallel",
    "lint-next": "eslint -c .eslintrc.next.js ",
    "clean": "lerna run clean",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:release": "changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-push": "pnpm run lint"
    }
  },
  "lint-staged": {
    "packages/*/{src,tests}/**/*.{js,ts,md}": [
      "prettier --write",
      "eslint -c .eslintrc.next.js --fix",
      "git add"
    ]
  },
  "website/{docs,src}/**/*.{js,ts,md}": [
    "prettier --write"
  ],
  "packageManager": "pnpm@8.6.1"
}
